<!DOCTYPE html>
<html>
  <head>
    <title>Week3CodeReview</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav>
    <div class="nav-wrapper">
      <ul id="nav-mobile" class="left ">
        <li><%= link_to "Cart | Total items: #{ cart_items }", cart_path, id: "cart_nav_bar_home" %></li>
        <li><%= link_to "See all products", products_path %></li>
        <% if current_user %>
          <li><%= current_user.email %></li>
          <li><%= link_to "Sign out", '/sign_out' %></li>
        <% else %>
          <li><%= link_to "Sign up", 'sign_up' %></li>
          <li><%= link_to "Sign in", '/sign_in' %></li>
        <% end %>
      </ul>
    </div>
  </nav>
  <% if current_user && current_user.admin %>
    <nav>
      <div class="nav-wrapper">
        <ul id="nav-mobile" class="left ">
          <li><%= link_to "Admin View | Add Products", new_product_path %></li>
        </ul>
      </div>
    </nav>
  <% end %>

  <body>
    <% flash.each do |name, msg| %>
      <%= content_tag :div, msg, id: "flash_#{name}" %>
    <% end %>
    <div class="container">
      <%= yield %>
    </div>
  </body>
</html>
